
@{
    // in layout we can access ViewData and ViewBag of Views but strongly typed model can't be accessed in layouts
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>@(ViewData["Title"] ?? "Asp.Net Core App")</title>
    <link href="~/StyleSheet.css" rel="stylesheet"/>
</head>
<body>
    <div class="container">
        <div class="navbar">
            <div class="navbar-brand">AspNet Core App</div>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/contact">Contact</a></li>
                <li><a href="/products">All Products</a></li>
                <li><a href="/search-products">Search Products</a></li>
                <li><a href="/order-product">Order Product</a></li>

            </ul>
        </div>
        <div class="page-content">
            @RenderBody()
        </div>
        <div class="footer-content">
            @*Most used in: if there is a script for specific view or adtion hyperlinks *@
            @RenderSection("footer_content",false) @*second argument for make it not required to be found in all views*@
        </div>
    </div>
</body>
</html>
