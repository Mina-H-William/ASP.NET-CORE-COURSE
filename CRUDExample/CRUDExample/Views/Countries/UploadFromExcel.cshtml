

@{
    ViewBag.Title = "Upload Countries from Excel";
}

<div class="flex">
    <div class="flex-1">
        <div class="text-grey">
            <span>Contacts</span>
            <i class="fa-solid fa-caret-right"></i>
            <span>Countries</span>
            <i class="fa-solid fa-caret-right"></i>
            <span>Upload From Excel</span>
        </div>
    </div>
</div>


<div class="form-container">

    <h2 class="text-large">Upload Countries from Excel</h2>

    <form asp-action="UploadFromExcel" asp-controller="Countries" method="post" enctype="multipart/form-data">
        <div class="form-field flex">
            <div class="w-25">
                <label for="fileUpload" class="form-label pt">Select xlsx File:</label>
            </div>
            <div class="flex-1">
                <input type="file" id="fileUpload" name="excelFile" class="form-input"/>
                <div class="text-red">@ViewBag.ErrorMessage</div>
                <div class="text-green">@ViewBag.Message</div>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25"></div>
            <button type="submit" class="button button-green-back">Upload</button>
        </div>
    </form>
</div>